<% if nil %>
<div id="debug" onclick="$(this).remove()" style="background:#efdb00;text-align:center;position:absolute;top:100px;right:10px;padding:0.5em;border: 2px solid #000; z-index:10;">
    <%= Rails.env %>
    <br/>
    <% if ActiveRecord::ConnectionAdapters::PostgreSQLAdapter.respond_to?(:get_stats) %>
    <% stats = ActiveRecord::ConnectionAdapters::PostgreSQLAdapter.get_stats %>
    Queries: <strong><%= stats[:queries] %></strong> |
    Rows: <strong><%= stats[:rows] %></strong> |
    Transfer: <strong><%= sprintf("%.1fk", stats[:bytes].to_f / 1024) %></strong>
    <% end %>
</div>
<% end -%>
