<div class="facebox-title">Reportar comentario</div>

<div class="facebox-content">
<div id="aaa"></div>
<%=form_tag("/comments/report/#{params[:id]}", :remote => true, :id => "report-comment-form")%>
Razón:
<select id="report-comment-form-moderation-reason" name="moderation_reason">
  <option></option>
  <% Comment::MODERATION_REASONS.each do |reason, idx| %>
  <option value="<%=idx%>"><%=reason%></option>
  <% end -%>
</select>
<br />
<div class="action-buttons">
<a href="#" onclick="closeFacebox();">Cancelar</a> &nbsp; &nbsp; &nbsp; <input type="submit" value="Reportar" />
</div>
</form>
<script type="text/javascript">
  $j("#report-comment-form").submit(function () {
      if ($j("#report-comment-form-moderation-reason").value() == "") {
        alert("Debes especificar una razón para reportar este comentario.");
        return false;
      }
      return true;
    });
</script>
</div>
