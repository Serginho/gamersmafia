<div class="<%=oddclass%>" style="padding: 5px;">
<h2 id="news<%=@object.id%>"><%= link_to @object.title, gmurl(news) %></h2>
<div class="infoinline">por <%=link_to @object.user.login, gmurl(@object.user) %> | <%=@object.event.title%> | <%=print_tstamp(@object.created_on, 'time')%> | <span class="f_milli"><%=gm_icon("comment", "small")%> <a title="Leer los comentarios de esta noticia" href="<%=gmurl(@object)%>#comments"><%=@object.cache_comments_count%></a></span></div>
<div class="summary"><%=@object.description%></div>
<%# TODO el .to_s es necesario por el bug #6702 %>
<% if @object.main and not strip_tags(@object.main.strip).to_s.blank? then %>
<div class="more"><%= link_to 'Seguir leyendo..', gmurl(news) %></div>
<% end -%>
<div class="clearleft"></div>
<br />
<br />
</div>
