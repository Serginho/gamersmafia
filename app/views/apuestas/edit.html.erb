<% generic_support do %>
<%= render :partial => '/shared/drafts', :locals => { :cls => Bet } if user_is_authed %>
<%=render :partial => 'shared/content_details', :locals => { :object => @bet} %>
<%mftext('Consejos') do %>
<ul class="content-hid">
<li>Mínimo 2 opciones</li>
<li>Máximo 5 o 6</li>
<li>De interés general</li>
</ul>
<% end -%>
<%= render :partial => 'shared/pending', :object => Bet.pending %>
<% end %>

<% content_main do %>
<%mftext('Editar apuesta') do %>
