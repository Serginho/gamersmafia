<% content_main do %>
  <%mftext(@competition.name) do %>
  <table>
    <% @competition.competitions_logs_entries.find(:all, :order => 'created_on DESC').each do |cle| %>
      <tr class="<%=oddclass%>">
        <td class="timestamp infoinline"><%= print_tstamp(cle.created_on) %></td>
        <td><%= cle.message %></td>
      </tr>
    <% end %>
    <tr class="<%=oddclass%>">
      <td class="timestamp infoinline"><%= print_tstamp(@competition.created_on) %></td>
      <td>Competici√≥n creada</td>
    </tr>
  </table>
<% end -%>
<% end -%>

<% generic_support do %>
  <div class="subheader f_deca first"><div>Acciones</div></div>
  <% if @competition.can_be_deleted? then %>
  <form method="post" action="/admin/competiciones/destroy">
    <input type="hidden" name="id" value="<%=@competition.id%>" />
    <div class="centered-link"><input type="submit" class="button confirm-click" value="Eliminar" /></div>
  </form>
  <% end -%>
<% end -%>
