<% if not (@curuser.hw_mouse.nil? or @curuser.hw_mouse.empty?) or
      not (@curuser.hw_processor.nil? or @curuser.hw_processor.empty?) or
      not (@curuser.hw_motherboard.nil? or @curuser.hw_motherboard.empty?)  or
      not (@curuser.hw_ram.nil? or @curuser.hw_ram.empty?) or
      not (@curuser.hw_hdd.nil? or @curuser.hw_hdd.empty?) or
      not (@curuser.hw_graphiccard.nil? or @curuser.hw_graphiccard.empty?) or
      not (@curuser.hw_monitor.nil? or @curuser.hw_monitor.empty?) or
      not (@curuser.hw_soundcard.nil? or @curuser.hw_soundcard.empty?) or
      not (@curuser.hw_headphones.nil? or @curuser.hw_headphones.empty?) or
      not (@curuser.hw_connection.nil? or @curuser.hw_connection.empty?) then %>
        <% mftext('Hardware') do %>
  <table>
<% if not @curuser.hw_mouse.nil? or @curuser.hw_mouse.empty? then %>
